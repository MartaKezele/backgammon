<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="375.0" prefWidth="600.0" styleClass="bgGreen" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mk.bg.controllers.PlayersController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" percentHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Button fx:id="btnChallengePlayer" disable="true" mnemonicParsing="false" onAction="#challengePlayer" text="%challenge_player" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
      <ListView fx:id="lvPlayers" onMouseClicked="#selectPlayer" prefHeight="200.0" prefWidth="200.0" />
   </children>
   <stylesheets>
      <URL value="@../styles/backgroundsAndFill.css" />
      <URL value="@../styles/bordersAndStrokes.css" />
      <URL value="@../styles/fontAndText.css" />
      <URL value="@../styles/spacing.css" />
   </stylesheets>
</GridPane>
